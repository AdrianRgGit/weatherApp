---
import CloudIcon from "../components/icons/CloudIcon.astro";
import SunIcon from "../components/icons/SunIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="main-container relative">
    <!-- NOTE: Mirar a ver si lo puedo hacer mejor. Usar un padding aquí no me gusta -->
    <section class="text-center pt-24 space-y-2">
      <h1 class="text-8xl text-white">19º</h1>
      <h2 class="text-3xl text-gray">Chilly</h2>
    </section>

    <section class="absolute bottom-0 w-full flex flex-col gap-y-2 p-4">
      <article
        class="flex justify-between border-b-gray-dark border-b text-white"
      >
        <p class="text-xl">Monday</p>

        <div class="flex gap-x-4">
          <p>T</p>
          <p>S</p>
          <p>N</p>
        </div>
      </article>

      <article class="flex justify-between text-gray">
        <div class="flex flex-col items-center gap-y-1">
          <p>Tue.</p>
          <CloudIcon width="25" height="25" />
          <p>12º</p>
        </div>

        <div class="flex flex-col items-center gap-y-1">
          <p>Wed.</p>
          <CloudIcon width="25" height="25" />
          <p>8º</p>
        </div>

        <div class="flex flex-col items-center gap-y-1">
          <p>Thu.</p>
          <SunIcon width="25" height="25" />
          <p>12º</p>
        </div>

        <div class="flex flex-col items-center gap-y-1">
          <p>Fri.</p>
          <SunIcon width="25" height="25" />
          <p>15º</p>
        </div>

        <div class="flex flex-col items-center gap-y-1">
          <p>Sat.</p>
          <SunIcon width="25" height="25" />
          <p>20º</p>
        </div>
      </article>
    </section>
  </main>
</Layout>

<style>
  .main-container {
    height: 100vh;
    background-image: url("./images/chilly.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
</style>
